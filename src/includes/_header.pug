block header
    #header
        header(class= itemDetails ? 'item-details' : '')

            .header__top

                a.header__menu-btn(title="Menu")
                    span.line.line-1
                    span.line.line-2
                    span.line.line-3

                a.top-mobile-return(href="javascript:history.go(-1)")

                .header__logo
                    img.black(src="assets/images/logo-2021-black-retina.png", alt="Claudie Pierlot")

                .header__right
                    .right__layer
                    ul.header__info
                        li.header__search
                            a(href="javasscript.void(0)" title="Search")
                                i.icon-search
                        li.header__login
                            a(href="javasscript.void(0)" title="Login")
                                i.icon-my-account
                            .login__content
                                .close__content
                                .login__container
                                    .login__title Аккаунт
                                    form#login-form
                                        input(type="email" placeholder="Ваш адрес электронной почты" required)
                                        input(type="password" placeholder="Ваш пароль" required)
                                        a(href="#password-forgot" rel="nofollow") Забыли пароль?
                                        button.login-btn Войти
                                    .register-sec
                                        h3 Нет аккаунта?
                                        a.register-link.button-style(href="/register.html") Зарегистрироваться
                                // LOGGED

                                .logged__container
                                    .logged__title Мой аккаунт
                                    ul.logged__menu
                                        li
                                            a(href="personal.html") Профиль
                                        li
                                            a(href="favorites.html") Избранное
                                        li
                                            a(href="orders.html") История заказов
                                        li
                                            a(href="return.html") Возврат товара
                                        li.logout-account
                                            a(href="#" rel="nofollow") Выход


                        li.header__wishlist
                            a(href="javasscript.void(0)" title="Wishlist")
                                i.icon-wishlist
                                span.number-item 2

                            .wishlist__content
                                .close__content
                                .wishlist-top__container
                                    .wishlist__title Список желаний (1)
                                    .wishlist__promo
                                        p Бесплатная доставка и возврат для всех заказов
                                form#wishlist-form
                                    .wishlist__main
                                        .wishlist__product
                                            .wishlist__image
                                                a
                                                    img(src="assets/images/Claudie_CFPOU00332-B001_H_1.jpg", alt="image")
                                            .wishlist__attributes
                                                .wishlist__product-name
                                                    a Длинное платье с принтом геометрией
                                                .wishlist__attr-types
                                                    .attr-color
                                                        span Цвет:
                                                        span Темный
                                                    .attr-size
                                                        span Размер:
                                                        span 36
                                                .wishlist__remove
                                                    a Удалить
                                                .wishlist__pricing
                                                    span 28 000 ₽

                                    .wishlist__totals
                                        button.wishlist__button Добавить все в корзину
                                        button.wishlist__button.button-invert Посмотреть все
                        li.header__cart
                            a(href="javasscript.void(0)" title="Cart")
                                i.icon-panier
                                span.number-item 2

                            .cart__content
                                .close__content
                                    span Назад
                                .cart-top__container
                                    .cart__title Корзина (1)
                                    .cart__promo
                                        p Бесплатная доставка и возврат для всех заказов
                                form#cart-form
                                    .cart__main
                                        .cart__product
                                            .cart__image
                                                a
                                                    img(src="assets/images/Claudie_CFPOU00332-B001_H_1.jpg", alt="image")
                                            .cart__attributes
                                                .cart__product-name
                                                    a Длинное платье с принтом геометрией
                                                .cart__attr-types
                                                    .attr-color
                                                        span Темный
                                                    .attr-size
                                                        select
                                                            option(value="36") 36
                                                            option(value="38") 38
                                                            option(value="40") 40
                                                            option(value="42") 42
                                                .cart__remove
                                                    a Удалить
                                                .cart__pricing
                                                    span 28 000 ₽
                                        .cart__subtotals
                                            span.shipping-time Доставка от 2 до 3 дней
                                            span.shipping-price Бесплатно

                                    .cart__totals
                                        .total-price
                                            span Итого: 28 000 ₽
                                        button.cart__button Смотреть мою корзину


            nav#navbar

                ul.navbar__menu
                    li.item__menu.has-submenu
                        a.item__menu-link(href="#") New in
                        .submenu__wrap
                            .submenu__main
                                ul.submenu__expand-col
                                    li.submenu__col-list
                                        span.submenu__title Новое
                                        ul
                                            li.submenu__col-item
